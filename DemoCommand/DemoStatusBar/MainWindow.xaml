<Window x:Class="DemoStatusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoStatusBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom" VerticalAlignment="Bottom" >
            <StatusBarItem>
                <Label Content="Loading..." />
            </StatusBarItem>
            <ProgressBar Width="100" Height="15" Value="67"  />
            <Separator/>
            <Button Height="20" Width="80"  HorizontalAlignment="Right" Click="Button_Click" >
                <Image Source=".\Images\CenntialCollegeIcon.jpg"/>
            </Button>
            <TextBox Width="80"></TextBox>
        </StatusBar>
    </DockPanel>
</Window>
