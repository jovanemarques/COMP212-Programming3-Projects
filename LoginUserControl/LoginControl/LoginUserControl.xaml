<UserControl x:Class="LoginControl.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginControl"
             mc:Ignorable="d" Height="158" Width="186">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="147"/>
        <TextBox x:Name="txtUsername" Text="{Binding Username}" HorizontalAlignment="Left" Height="23" Margin="10,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="147"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="10,101,0,0" VerticalAlignment="Top" Width="147" Height="23"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="147"/>

    </Grid>
</UserControl>
