<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        xmlns:InventoryTrackerControl="clr-namespace:InventoryTrackerControl;assembly=InventoryTrackerControl" x:Class="Client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <InventoryTrackerControl:InventoryTrackerControl DataContext="{Binding RelativeSource={RelativeSource Self}}" 
                                                         ProductItemName="MotherBoard" 
                                                         CurrentValue="100"
                                                         StartValue="200" Margin="0,0,10,0.5" />
        <InventoryTrackerControl:InventoryTrackerControl DataContext="{Binding RelativeSource={RelativeSource Self}}" 
                                                         ProductItemName="CPU" 
                                                         CurrentValue="50"
                                                         StartValue="100" />
    </StackPanel>
    
</Window>
